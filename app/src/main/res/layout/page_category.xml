<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@color/theme_color">

        <Button
            android:id="@+id/btnMainAddress"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip"
            android:background="@null"
            android:drawableRight="@drawable/btn_icon_bottom"
            android:ellipsize="end"
            android:maxWidth="100dip"
            android:singleLine="true"
            android:text="@string/lab_main_address"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/labMainAddress"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_toLeftOf="@+id/iconMainLogo"
            android:layout_toRightOf="@+id/btnMainAddress"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="福州同城"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iconMainLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:background="@drawable/logo" />
    </RelativeLayout>

    <TextView
        android:id="@+id/lab_main_category_notinfo"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/msg_loading_error_reset"
        android:textColor="@color/color_999"
        android:textSize="25sp"
        android:visibility="gone" />

    <GridView
        android:id="@+id/sortGridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dip"
        android:background="@android:color/transparent"
        android:horizontalSpacing="20dip"
        android:numColumns="4"
        android:verticalSpacing="20dip" />
</LinearLayout>
